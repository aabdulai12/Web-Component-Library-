{
  "compilerOptions": {
    "module": "CommonJS", // CommonJS is standard for Node.js
    "target": "ES2022",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
